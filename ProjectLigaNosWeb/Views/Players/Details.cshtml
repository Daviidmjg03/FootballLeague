@model ProjectLigaNosWeb.Models.PlayerViewModel

<h1>Details</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DateBirth.ToString("d")</dd>

        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Shirt Number</dt>
        <dd class="col-sm-10">@Model.ShirtNum</dd>

        <dt class="col-sm-2">Nationality</dt>
        <dd class="col-sm-10">@Model.Nacionality</dd>

        <dt class="col-sm-2">Club</dt>
        <dd class="col-sm-10">@Model.ClubName</dd> 
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

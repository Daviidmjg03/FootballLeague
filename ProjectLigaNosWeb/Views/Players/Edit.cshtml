@model ProjectLigaNosWeb.Data.Entities.Players

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Players</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateBirth" class="control-label"></label>
                <input asp-for="DateBirth" class="form-control" type="date" value="@Model.DateBirth == DateTime.MinValue ? new DateTime(2024, 1, 1).ToString(" yyyy-MM-dd") : Model.DateBirth.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShirtNum" class="control-label"></label>
                <input asp-for="ShirtNum" class="form-control" />
                <span asp-validation-for="ShirtNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nacionality" class="control-label"></label>
                <input asp-for="Nacionality" class="form-control" />
                <span asp-validation-for="Nacionality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubId" class="control-label"></label>
                <input asp-for="ClubId" class="form-control" />
                <span asp-validation-for="ClubId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label"></label>
                <input asp-for="ProfilePicture" type="file" class="form-control" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
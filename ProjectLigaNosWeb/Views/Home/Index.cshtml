@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #f0f8ff;
        font-family: 'Arial', sans-serif;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    .text-center {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 10px;
        background-color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h1.display-4 {
        font-size: 2.5rem;
        color: #0056b3;
        margin-bottom: 20px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        animation: fadeIn 1s ease;
    }

    p {
        font-size: 1.2rem;
        line-height: 1.6;
    }

    a {
        color: #0056b3;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #ff4500;
            text-decoration: underline;
        }

    .loading {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.8);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .spinner {
        width: 60px;
        height: 60px;
        border: 8px solid #f3f3f3;
        border-top: 8px solid #ff4500;
        border-radius: 50%;
        animation: rotateSpinner 1s linear infinite;
    }

    .loading-text {
        margin-top: 10px;
        font-size: 1.5rem;
        color: #ff4500;
        font-weight: bold;
        text-align: center;
    }
</style>

<div id="loading" class="loading">
    <div class="spinner"></div>
    <div class="loading-text">Loading...</div>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome to the best football league in Portugal</h1>
    <p>Learn more about <a href="https://docs.microsoft.com/aspnet/core">building web applications with ASP.NET Core</a>.</p>
</div>

<script>
    window.onload = function () {
        setTimeout(function () {
            document.getElementById('loading').style.display = 'none';
        }, 350);
    };
</script>
